<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>

  <div class="user_info">
    <div class="card_info_wrapper">
      <div class="Card__title">
        <h2>カード情報</h2>
      </div>
      <div class="Card_info">
        【カード番号】
        <br>
        <%= "**** **** **** " + @card[:last4] %>
        <%# カード番号の下4桁を取得 %>

        <br>
        【有効期限】
        <br>
        <%= @card[:exp_month] %>
        <%# 有効期限の「月」を取得 %>
        /
        <%= @card[:exp_year] %>
        <%# 有効期限の「年」を取得 %>
      </div>
    </div>

    <div class="account_info_wrapper">
      <div class="Account__info">
        <h2>ユーザー情報</h2>
      </div>

      <div class="AccountPage__form">
        <%# <%= form_for(current_user) do |f| %>
        <%= form_with(model: current_user) do |f| %>
          <div class="FormField">
            <div class="FormField__name">
              <%= f.label :name, '名前' %>
            </div>
            <div class="FormField__name">
              <%= f.text_field :name, autofocus: true %>
            </div>
          </div>
          <div class="FormField">
            <div class="FormField__email">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class="FormField__email">
              <%= f.email_field :email %>
            </div>
            <br>
          </div>
          <%= f.submit '更新する' %>
        <% end %>
      </div>
    </div>
  </div>

    <br>
    <%= link_to 'ログアウト',  destroy_user_session_path, method: :delete %>
    <br>
    <%= link_to '商品一覧へ戻る', root_path %>
  
</div>
